{
  "pluginAlias": "WattBox",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "WattBox",
        "minLength": 1,
        "required": true
      },
      "address": {
        "title": "WattBox Address",
        "type": "string",
        "default": "192.168.1.100",
        "minLength": 7,
        "required": true
      },
      "username": {
        "title": "User Name",
        "type": "string",
        "default": "wattbox",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "default": "wattbox",
        "required": true,
        "options": {
          "hidden": true
        }
      },
      "disableSwitch": {
        "type": "object",
        "default": null,
        "required": false,
        "properties": {
          "name": {
            "title": "Disable Switch Name",
            "type": "string",
            "default": "Disable Control",
            "minLength": 1,
            "required": false
          },
          "timeout": {
            "title": "Enabled timeout (in seconds) before the disable switch reverts to ON.",
            "type": "integer",
            "default": 60,
            "minimum": 0,
            "required": false
          }
        }
      },
      "includeOutlets": {
        "title": "Include Outlets",
        "type": "array",
        "default": null,
        "required": false,
        "items": {
          "title": "Outlet Name",
          "type": "string"
        }
      },
      "excludeOutlets": {
        "title": "Exclude Outlets",
        "type": "array",
        "default": null,
        "required": false,
        "items": {
          "title": "Outlet Name",
          "type": "string"
        }
      },
      "outletStatusCacheTtl": {
        "title": "Outlet Status Cache TTL (in seconds)",
        "type": "integer",
        "default": 15,
        "minimum": 5,
        "maximum": 60,
        "required": true
      },
      "outletStatusPollInterval": {
        "title": "Outlet Status Poll Interval (in milliseconds)",
        "type": "integer",
        "default": 15000,
        "minimum": 5000,
        "maximum": 60000,
        "required": true
      }
    }
  },
  "form": [
    "name",
    "address",
    "username",
    "password",
    "disableSwitch",
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Advanced Settings",
      "description": "",
      "items": [
        "includeOutlets",
        "excludeOutlets",
        "outletStatusCacheTtl",
        "outletStatusPollInterval"
      ]
    }
  ]
}
